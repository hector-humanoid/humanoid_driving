<?xml version="1.0"?>

<launch>
  <node name="joy_node" pkg="joy" type="joy_node">
    <rosparam param="dev">/dev/input/js0</rosparam>
  </node>
  <node name="driving_widget" pkg="thor_mang_driving_widget" type="driving_widget" output="screen">
    <rosparam param="camera_topic">/multisense/camera/left/image_rect</rosparam>
    <rosparam file="$(find thor_mang_driving_widget)/config/head_config.yaml"/>
  </node>
</launch>
